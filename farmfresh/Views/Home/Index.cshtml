                <h1 class="display-5">Latest Articles From Our Blog Post</h1>
            </div>
            <div class="row g-5">
                @foreach (var blog in Model.Blogs)
                {
                    
                
                <div class="col-lg-4">
                    <div class="blog-item position-relative overflow-hidden">
                        <img class="img-fluid" src="img/@blog.PhotoUrl" alt="">
